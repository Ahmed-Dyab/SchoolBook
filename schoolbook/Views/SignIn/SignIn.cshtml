
@{
    ViewData["Title"] = "SignIn";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book School SignIn</title>
    <!-- render all elements normale -->
    <link rel="stylesheet" href="/css/normalize.css">
    <!-- font awsome -->
    <link rel="stylesheet" href="/css/all.min.css">
    <!-- main style -->
    <link rel="stylesheet" href="/css/style.css">
    <!-- goole font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200..1000&display=swap" rel="stylesheet">
</head>
<body>
    <div id="sign-in-section">
        <div class="form-content">
            <form action="/userprofile/profile" method="post" name="Sign-In">
                <h2>تسجيل الدخول</h2>
                <div id="email-container">
                    <div class="box">
                        <label for="email">البريد الألكتروني :</label>
                        <input type="email" name="Email" id="Email" placeholder="البريد الألكتروني" required>
                    </div>
                    <div class="box">
                        <label for="password">كلمة المرور :</label>
                        <input type="password" name="Password" id="Password" placeholder="كلمة المرور" required>
                    </div>
                </div>
                <input type="submit" value="تسجيل الدخول">
                <a href="/signup/signup">إنشاء حساب جديد</a>
            </form>
            <div class="image-container">
                <img src="/images/signIn.jpg" alt="signIn Image ">
            </div>
        </div>
    </div>
</body>
</html>
